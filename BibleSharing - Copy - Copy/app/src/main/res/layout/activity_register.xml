<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="stpaul.biblesharing.RegisterActivity"
    android:background="@mipmap/basicbackground">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:background="#45936828"
        android:ems="10"
        android:layout_centerInParent="true"
        android:hint="@string/username"
        android:id="@+id/RUserNameArea"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/RPasswordArea"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:background="#45936828"
        android:ems="10"
        android:layout_centerInParent="true"
        android:hint="@string/password"
        android:id="@+id/RPasswordArea"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/RCPasswordArea"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:background="#45936828"
        android:ems="10"
        android:hint="@string/comfirm_password"
        android:id="@+id/RCPasswordArea"
        android:layout_above="@+id/RRegisterBtn"></EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RRegisterBtn"
        android:text="@string/register"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
