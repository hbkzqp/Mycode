<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="stpaul.biblesharing" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"  android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ForgetPasswordActivity"
            android:label="@string/title_activity_forget_password" android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".BibleActivity"
            android:label="@string/title_activity_bible" android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
